<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="?attr/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/layout_rounded_corner">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_game"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/loading"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/imageViewGamePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text=""
                android:id="@+id/textView_game_title"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView_game_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_game_title"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="" />

            <Button
                android:id="@+id/buttonTrailer"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/youtube_64dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout">
                <TextView
                    android:id="@+id/textVew_avaiable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/item_avaiable"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/textVew_avaiable_list"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textVew_avaiable"
                    android:layout_alignParentRight="true"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/item_trailer" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
